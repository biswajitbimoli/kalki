@kalki
@global

bg_color = ['red', 'green', 'blue', 'purple', 'orange', 'black']

@kalki
* {
    padding: auto;
}
@kalki
for i in range(5):
  style = @css
  .mt-{i} ${
    margin-top: {i}em;
  }$
  @end
  @addkalki
@kalki

@kalki
for color in bg_color:
  style = @css
  .bg-{color} ${
    background-color: {color};
  }$
  @end
  @addkalki
for color in bg_color:
  style = @css
  .text-{color} ${
    color: {color};
  }$
  @end
  @addkalki
@kalki